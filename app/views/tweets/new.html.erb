<% content_for :title, "New Tweet" %>
<main class="page__content">
  <header class="page__content-header">
    <h1 class="txt--xl flush">Home</h1>
  </header>

  <div class="page__content-body">
    <%= form_with(model: @tweet) do |form| %>
      <%= form.text_area :message, class: "input", required: true, maxlength: 280, autofocus: true, placeholder: "What's happening?" %>
      <%= form.submit class: "btn btn--primary" %>
    <% end %>
  <div>
</main>
