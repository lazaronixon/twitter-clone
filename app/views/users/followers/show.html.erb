<% content_for :title, "People following #{format_user(@user)} / Twitter Clone" %>

<main class="page__content">
  <header class="content-header">
    <div class="push-md--bottom">
      <h1 class="txt--xl flush"><%= @user.name %></h1>
      <div class="txt--sm"><%= at @user %></div>
    </div>

    <div>
      <h2 class="txt--lg flush">Followers</h2>
    </div>
  </header>

  <section class="content-body">
    <%= render partial: "/users/user", collection: @page.records %>
    <%= link_to "Next page", user_followers_path(@user, page: @page.next_param), class: "btn btn--secondary" unless @page.last? %>
  <section>
</main>
