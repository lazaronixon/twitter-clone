<% content_for :title, "#{format_user(@user)} / Twitter Clone" %>

<main class="page__content">
  <header class="content-header">
    <h1 class="txt--xl flush"><%= @user.name %></h1>
    <div class="txt--sm"><%= @user.tweets_size %> Tweets</div>
  </header>

  <section class="content-body">
    <ul class="list--inline unpad">
      <li><%= link_to "#{@user.following_size} Following", [@user, :following] %></li>
      <li><%= link_to "#{@user.followers_size} Followers", [@user, :followers] %></li>
      <li><%= link_to "Follow", [@user, :follow], method: :post, class: "btn btn--secondary" unless (@user.followed? || @user.current?) %></li>
    </ul>

    <%= render @page.records %>
    <%= link_to "Next page", user_path(@user, page: @page.next_param), class: "btn btn--secondary" unless @page.last? %>
  <section>
</main>
