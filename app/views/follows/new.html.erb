<% content_for :title, "#{format_user(Current.user)} / Twitter Clone" %>

<main class="page__content">
  <header class="page__content-header">
    <h1 class="txt--xl flush">New following</h1>
  </header>

  <section class="page__content-body">
    <%= form_with(url: follows_path) do |form| %>
      <%= form.text_field :username, class: "input", required: true, autofocus: true, placeholder: "Username" %>
      <%= form.submit "Follow user", class: "btn btn--secondary" %>
    <% end %>
  <section>
</main>
